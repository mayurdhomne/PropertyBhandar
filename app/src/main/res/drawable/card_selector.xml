<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the card is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0C6972" /> <!-- A lighter shade when pressed -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- State when the card is focused (e.g., keyboard focus) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#118F98" /> <!-- Another lighter shade for focus -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#07434D" /> <!-- Default color -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
