<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="1dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:contentDescription="Back"
            android:focusable="true"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            tools:ignore="HardcodedText,UseAppTint,TouchTargetSizeCheck" />

        <!-- Email Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_email_24"
                android:tint="@color/backgroundColor"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="user@gmail.com"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Verified"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:layout_marginStart="30dp" />

        <!-- Password Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Looking to update your password? We've gone password-less. Simply enter your email address when you log in to receive your unique verification code."
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp" />


        <Button
            android:id="@+id/Passwordresetbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Your Password"
            android:layout_marginTop="9dp"
            android:textColor="#D32F2F"
            android:background="@drawable/buttonbg"
            android:layout_gravity="right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/darker_gray" />

        <!-- Sign Out Section -->
        <!-- Sign Out Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout from this device"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout only from this device to maintain security on other signed-in devices."
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/SignOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="9dp"
            android:textColor="#D32F2F"
            android:background="@drawable/buttonbg"
            android:layout_gravity="right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Your Account"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deleting your account is permanent. All your data will be lost, and you will no longer be able to access your account."
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp" />

        <!-- Delete Account Section -->
        <Button
            android:id="@+id/btnDeleteAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete account"
            android:layout_marginTop="9dp"
            android:textColor="#D32F2F"
            android:background="@drawable/buttonbg"
            android:layout_gravity="right" />


    </LinearLayout>
</ScrollView>
