<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_green"
    tools:context=".Activity.BuyActivity"
    tools:ignore="ExtraText">

    <!-- Back button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:src="@drawable/back_arrow"
        android:contentDescription="Go back"
        app:tint="@color/white" />

    <!-- Buy Support Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/back_button"
        android:layout_marginStart="16dp"
        android:text="BUY SUPPORT"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <!-- Seamless Purchase Help -->
    <TextView
        android:id="@+id/in_the_spotlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="SEAMLESS PURCHASE HELP!"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:contentDescription="Subtitle: Seamless Purchase Help" />

    <!-- ScrollView to make content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/in_the_spotlight">

        <LinearLayout
            android:id="@+id/card_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_bottom_section"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="Ready to Buy your Dream Property? Luxurious Estates has you covered. From urban homes to waterfront retreats, our selection suits every need. Our expert agents will guide you through the process. Don’t miss out—contact us today to schedule a viewing!"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:contentDescription="Property description text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_buy_property_page"
                android:contentDescription="Image of properties illustration" />

            <Button
                android:id="@+id/explore_btn"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/button_green"
                android:layout_marginBottom="20dp"
                android:layout_gravity=""
                android:text="Explore More"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:contentDescription="Button to explore more properties"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
